{
  "manifest_version": 3,
  "name": "Cosmic Wallet",
  "description": "Cosmic Wallet - Oauth for Solana",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Cosmic Wallet"
  },
  "icons": {
    "16": "/public/favicon/favicon.ico",
    "192": "/public/favicon/logo192.png",
    "512": "/public/favicon/logo512.png"
  },
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/contentScript/contentScript.ts"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/popup/script.ts"
      ],
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; sha256-ek+jXksbUr00x+EdLLqiv69t8hATh5rPjHVvVVGA9ms=; object-src 'self';"
  }
}